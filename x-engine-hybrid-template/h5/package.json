{
  "name": "@zk4/moudle_app_demo",
  "version": "1.0.1",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "WEBPACK_MODE=development webpack-dev-server --mode development -p --open",
    "build": "webpack  --config webpack.prod.js",
    "prod": "WEBPACK_MODE=production webpack  --config webpack.prod.js",
    "patch": "npm version patch",
    "test": "WEBPACK_MODE=development rm -rdf tmp &&  testem",
    "ci": "WEBPACK_MODE=development rm -rdf tmp &&testem ci",
    "perf": "WEBPACK_MODE=development rm -rdf tmp && webpack --config webpack.perf.js && node tmp/perf/main.js",
    "dev:device": "rm -rdf dist && WEBPACK_MODE=development webpack  --mode development  && cp -r dist/* ../iOS/app/com.*.*.*/",
    "prod:device": "rm -rdf dist && WEBPACK_MODE=production webpack --mode production   --config webpack.prod.js && cp -r dist/* ../iOS/app/com.*.*.*/"
  },
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/zk4/x-engine-npm.git"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "benchmark": "^2.1.4",
    "css-loader": "^3.6.0",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^4.3.0",
    "mocha": "^8.0.1",
    "style-loader": "^1.2.1",
    "vconsole-webpack-plugin": "^1.5.1",
    "webpack": "^4.44.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@zk4/xengine": "^1.0.1"
  }
}
